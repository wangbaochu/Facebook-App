<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- top border -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#b3b3b3" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- bottom border -->
    <item android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="#999999" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- left and right borders -->
    <item
        android:bottom="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="#a6a6a6" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- main background -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="#e7e7e7"
                android:startColor="#d0d0d0" />

            <corners android:radius="4dp" />

            <padding
                android:bottom="@dimen/padding"
                android:left="@dimen/padding"
                android:right="@dimen/padding"
                android:top="@dimen/padding" />
        </shape>
    </item>

</layer-list>